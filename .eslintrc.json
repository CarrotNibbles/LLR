{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "xo",
        "next/core-web-vitals",
        "plugin:@next/next/recommended"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {},
    "ignorePatterns": [
        "postcss.config.js",
        "tailwind.config.ts",
        "src/components/ui/**"
    ]
}